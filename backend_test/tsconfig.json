{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": false,
		"strict": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"types": ["node", "jest"]
	},
	"include": ["src", "tests"]
}
